+#define ROUNDUP(x, y) ((((x)+((y)-1))/(y))*(y))
+#define NVRAM_SPACE 0x8000
+#define WINDOW_ADDR 0x1c000000
+#define WINDOW_SIZE 0x800000
+#define BUSWIDTH 2
+
+static struct mtd_info *bcm947xx_mtd;
