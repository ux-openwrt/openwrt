choice
	prompt "Target System"
	default LINUX_2_4_BRCM
	
config LINUX_2_6_AU1000
	bool "AMD Alchemy AUxx [2.6]"
	select mipsel
	select LINUX_2_6
	select PCI_SUPPORT
	select USB_SUPPORT
	select USES_JFFS2
	help
	  Build firmware for AMD Alchemy 1500 boards
	  (e.g. 4G-Systems Mesh/Access Cube ...)

config LINUX_2_6_ARUBA
	bool "Aruba [2.6]"
	select mips
	select LINUX_2_6
	select PCI_SUPPORT
